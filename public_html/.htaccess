RewriteEngine On

# Permitir archivos/directorios existentes
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Mapear assets a la aplicación
RewriteRule ^(assets|img|video)/(.*)$ masqueclima/public/$1/$2 [L]

# Enrutar todo lo demás al front controller evitando bucles
RewriteRule ^(?!masqueclima/).* masqueclima/public/index.php [QSA,L]
