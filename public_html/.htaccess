<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /

# servir archivos/directorios reales
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# mapear assets
RewriteRule ^assets/(.*)$ /masqueclima/public/assets/$1 [L]
RewriteRule ^img/(.*)$ /masqueclima/public/assets/img/$1 [L]
RewriteRule ^video/(.*)$ /masqueclima/public/assets/video/$1 [L]

# todo lo dem√°s al front controller
RewriteRule ^.*$ /masqueclima/public/index.php [L]
</IfModule>

